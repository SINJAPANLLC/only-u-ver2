# サーバー設定
NODE_ENV=production
PORT=5000

# Firebase設定（Firebaseコンソールから取得）
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Stripe設定（本番環境キー）
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxx
VITE_STRIPE_PUBLIC_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxx

# Cloudflare R2ストレージ設定（推奨）
# Cloudflareダッシュボード → R2 → API Tokensから取得
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=only-u-storage
R2_PUBLIC_URL=https://your-bucket.r2.dev

# または AWS S3を使用する場合
# AWS_REGION=ap-northeast-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# S3_BUCKET_NAME=only-u-storage
# S3_PUBLIC_URL=https://your-bucket.s3.amazonaws.com

# または Google Cloud Storageを使用する場合
# GCS_PROJECT_ID=your-gcp-project-id
# GCS_BUCKET_NAME=only-u-storage
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ドメイン設定
VITE_API_URL=https://only-u.fun

# セキュリティ設定
SESSION_SECRET=your_random_session_secret_here_min_32_chars

# メール設定（オプション - 通知用）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# 本番環境のFirebase Admin SDK（サーバーサイド操作用）
# FIREBASE_ADMIN_SERVICE_ACCOUNT=/path/to/service-account-key.json
